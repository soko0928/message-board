<%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>
  
<div class="form-group">
  <label for="message_body" class="control-label col-md-4">1.事実(今日起こったことで、特徴的なことを一つ)</label>
   <div class="col-md-6">
      <%= f.text_area :fact, :class => "form-control" %>
    </div>
</div>

<div class="form-group">
  <label for="message_body" class="control-label col-md-4">2.気づき(「事実」から得た気づき)</label>
   <div class="col-md-6">
      <%= f.text_area :awereness, :class => "form-control" %>
    </div>

<div>
  <div class="form-group">
      <label for="message_body" class="control-label col-md-4">3.教訓(格言やことわざを引用)</label>
     
      <%= f.collection_select :quote_id, Quote.all, :id, :name %>
    </div>
</div>

<div class="form-group">
  <label for="message_body" class="control-label col-md-4">4.宣言(明日への宣言)</label>
   <div class="col-md-6">
      <%= f.text_area :goal, :class => "form-control" %>
      </div>
</div>
      <%= f.submit class: "btn btn-sm btn-primary" %>


  
<% end %>